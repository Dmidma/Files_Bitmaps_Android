<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.filesbitmaps.TempFileActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/et_prefix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Prefix"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_suffix"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_suffix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Suffix"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/et_prefix"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_temp_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Temp File Name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_prefix" />

    <TextView
        android:id="@+id/tv_temp_full_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Temp Full Path"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_temp_file_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_create_temp_file"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Temp File"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
